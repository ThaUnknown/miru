{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
    },
    "checkJs": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "types": ["./types.d.ts"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "build", "git_modules", "**/node_modules", "**/dist", "**/build", "**/git_modules",]
}
